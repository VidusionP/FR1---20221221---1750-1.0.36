{"components/halothemes/halo-login-popup":"<div id=\"{{data}}-popup\" class=\"login-form-popup {{#if data '==' 'login-pc'}}halo-auth-popup{{/if}}\">\r\n    <div class=\"halo-popup-content\">\r\n        <form class=\"form\" action=\"{{settings.secure_base_url}}/login.php?action=check_login\" method=\"post\">\r\n            <div class=\"login-form-wrapper\">\r\n                <div class=\"form-field\">\r\n                    <label class=\"form-label\" for=\"{{email_id}}\">\r\n                        {{lang 'login.field_email'}}\r\n                        <em class=\"text-danger\">*</em>\r\n                    </label>\r\n                    <input id=\"{{email_id}}\" class=\"form-input\" type=\"email\" value=\"\" name=\"login_email\" placeholder=\"{{lang 'login.field_email2'}}\">\r\n                </div>\r\n                <div class=\"form-field\">\r\n                    <label class=\"form-label\" for=\"{{password_id}}\">\r\n                        {{lang 'login.field_password'}}\r\n                        <em class=\"text-danger\">*</em>\r\n                    </label>\r\n                    <input id=\"{{password_id}}\" class=\"form-input\" type=\"password\" value=\"\" placeholder=\"{{lang 'login.field_password'}}\" name=\"login_pass\">\r\n                </div>\r\n                <div class=\"form-actions text-center\">\r\n                    <button type=\"button\" class=\"button button--primary\">{{lang 'login.submit_value' }}</button>\r\n                    <a class=\"forgot-password\" href=\"{{urls.auth.forgot_password}}\">{{lang 'login.forgot_password'}}</a>\r\n                    <a class=\"create-account button\" href=\"{{urls.auth.create_account}}\">{{lang 'login.new_customer.create_account'}}</a>\r\n                </div>\r\n            </div>\r\n        </form>\r\n    </div>\r\n</div>\r\n"}
